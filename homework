#include <iostream>
using namespace std;
int main() {
   cout<< "輸入高度"; 
   int n,i,k;
   int height;
   cin >> height;
   if(height>8||height<=0){
       cout<<"out of range";
       return 0;}
   for( i = 0; i < height+1; i++){
      for( k= height+1; k>i; k--){ 
         cout<<" ";}
        for( n=0; n<i;n++){
           cout<<"#";   
        }
        cout<<"\t";
        for( n=0; n<i;n++){
        cout<<"#";
   }
   cout<<"\n";
   }
   return 0;
}   
